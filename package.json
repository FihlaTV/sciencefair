{
  "name": "sciencefair-repo",
  "version": "1.0.7",
  "description": "container repo for sciencefair app src and build tools",
  "scripts": {
    "pack": "electron-builder --dir",
    "bundle": "node scripts/bundle.js",
    "build": "electron-builder",
    "buildall": "electron-builder -mwl",
    "buildlinux": "electron-builder -l",
    "buildosx": "electron-builder -m",
    "buildappveyor": "electron-builder -w --ia32 --x64",
    "postinstall": "which electron-rebuild && electron-rebuild",
    "start": "npm run bundle && electron app/index.js",
    "dev": "SCIENCEFAIR_DEVMODE=true npm run bundle && electron app/index.js",
    "deploysite": "cd site && npm run build && cd .. && gh-pages -d site/dist",
    "doctor": "electron ./scripts/doctor.js",
    "test": "standard"
  },
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeforscience/sciencefair.git"
  },
  "author": {
    "name": "Code for Science",
    "url": "https://codeforscience.org"
  },
  "license": "MIT",
  "devDependencies": {
    "cross-zip": "^2.1.3",
    "dat": "^13.9.0",
    "electron": "1.7.8",
    "electron-builder": "^19.37.2",
    "electron-rebuild": "^1.6.0",
    "gh-pages": "^1.0.0",
    "minimist": "^1.2.0",
    "node-gyp-build": "^3.2.0",
    "rimraf": "^2.5.2",
    "standard": "^10.0.2",
    "temporary": "^0.0.8",
    "browserify": "^14.5.0",
    "common-shakeify": "^0.4.4",
    "envify": "^4.1.0",
    "minify-stream": "^1.1.0",
    "unassertify": "^2.0.5",
    "yo-yoify": "^4.0.0"
  },
  "standard": {
    "ignore": [
      "app/client/lib"
    ]
  },
  "browserify": {
    "builtins": [],
    "commonDir": false,
    "detectGlobals": false,
    "ignoreMissing": true,
    "insertGlobalVars": "global",
    "browserField": false,
    "standalone": "renderer"
  }
}
